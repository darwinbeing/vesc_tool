+function Create-Directory ([string]$Directory)
+{
+    [void] (New-Item -Path $Directory -ItemType "directory" -Force)
+}
+
+function Get-Batchfile ($file, $params)
+{
+    $cmd = "`"$file`" $params & set"
+    cmd /c $cmd | Foreach-Object {
+        $p, $v = $_.split('=')
+        Set-Item -path env:$p -value $v
+    }
+}
